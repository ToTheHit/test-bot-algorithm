[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space
indent_size=4

[{.eslintrc,.prettierrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_size=2

[*.json5]
indent_size=2

[*.less]
indent_size=2

[*.sass]
indent_size=2

[*.scss]
indent_size=2

[{jshint.json,*.jshintrc}]
indent_size=2

[{*.jscs.json,*.jscsrc}]
indent_size=2

[*.js.map]
indent_size=2

[{*.cjsx,*.coffee}]
indent_size=2

[{.analysis_options,*.yml,*.yaml}]
indent_size=2

